<Window x:Class="AccountantMVVM.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountantMVVM"
        xmlns:viewModel="clr-namespace:AccountantMVVM.ViewModel"
        mc:Ignorable="d"
        Title="Login" Height="207.237" Width="143.092">
    <Window.Resources>
        <viewModel:UserVm x:Key="UserViewModel" />
    </Window.Resources>
    <Grid>
        <TextBox  x:Name="UserNameInputTB" HorizontalAlignment="Center" Height="23" Margin="10,40,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="115" Text="{Binding Login_UserNameTb, Source={StaticResource UserViewModel}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontStyle="Italic" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="UserNameInputTB_GotFocus"/>
        <Button x:Name="LoginUserBtn" Content="Enter" HorizontalAlignment="Left" Margin="29,79,0,0" VerticalAlignment="Top" Width="74" Click="LoginUserBtn_Click"/>
        <Label x:Name="infoMessageLabel" Content="" HorizontalAlignment="Left" Margin="29,104,0,0" VerticalAlignment="Top" Width="74" Height="18" FontSize="6" HorizontalContentAlignment="Center" Foreground="Red"/>

    </Grid>
</Window>
